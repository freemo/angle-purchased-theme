  .row
    .col-xs-9.col-lg-6
      p.mt-sm Default theme
    .col-xs-3.col-lg-6
      p: a.btn.btn-default(href='', ng-click='openDefault()') Open
  .row
    .col-xs-9.col-lg-6
      p.mt-sm Inline controller
