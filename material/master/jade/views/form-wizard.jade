.panel.panel-default
  .panel-heading  Form Wizard Horizontal (with validation)
  .panel-body
    form(action='/', form-wizard="", steps="4", validate-steps="true", name="wizardValidation")
      .form-wizard.wizard-horizontal
        // START wizard steps indicator
        ol.row
          li.col-md-3(ng-class="{'active':wizard.active(1)}", ng-click="wizard.go(1)")
            h4 Login
            small.text-muted Duis volutpat nunc at ligula tincidunt non aliquam.
          li.col-md-3(ng-class="{'active':wizard.active(2)}", ng-click="wizard.go(2)")
            h4 Personal
            small.text-muted Nulla pharetra imperdiet sapien ac faucibus.
          li.col-md-3(ng-class="{'active':wizard.active(3)}", ng-click="wizard.go(3)")
            h4 Contact
            small.text-muted Sed elementum lorem dolor, id fermentum metus.
          li.col-md-3(ng-class="{'active':wizard.active(4)}", ng-click="wizard.go(4)")
            h4 Done!
            small.text-muted Nullam sit amet magna vestibulum libero.
        // END wizard steps indicator

        // START Wizard Step inputs
        div#step1(ng-show="wizard.active(1)")
          // Wizard with validation require inner forms to group step inputs to be validated
          fieldset(ng-form="formStep1")
            legend Login
            // START row
            .row
              .col-md-4
                .form-group
                  label Username
                  .controls
                    input.form-control(type='text', name='username', ng-model="username", placeholder='Your nick here', required)
                    span.text-danger(ng-show="formStep1.$submitted && formStep1.username.$invalid") This field is invalid
              .col-md-4
                .form-group
                  label Password
                  .controls
                    input.form-control(type='password', name='password', ng-model="password", placeholder='Your password', required)
                    span.text-danger(ng-show="formStep1.$submitted && formStep1.password.$invalid") This field is invalid
              .col-md-4
                .form-group
                  label Retype Password
                  .controls
                    input.form-control(type='password', name='password2', ng-model="password2", placeholder='Confirmed password', required)
                    span.text-danger(ng-show="formStep1.$submitted && formStep1.password2.$invalid") This field is invalid
            // END row
          ul.pager
            li.next
              a(href='', ng-click="wizard.go(2)")
                | Next
                span &rarr;
        // END Wizard Step inputs
        // START Wizard Step inputs
        div#step2(ng-show="wizard.active(2)")
          // Wizard with validation require inner forms to group step inputs to be validated
          fieldset(ng-form="formStep2")
            legend Personal
            // START row
            .row
              .col-md-6
                .form-group
                  label First Name
                  input.form-control(type='text', name='firstName', ng-model="firstName", placeholder='John', required)
                  span.text-danger(ng-show="formStep2.$submitted && formStep2.firstName.$invalid") This field is invalid
              .col-md-6
                .form-group
                  label Last Name
                  input.form-control(type='text', name='lastName', ng-model="lastName", placeholder='Snow', required)
                  span.text-danger(ng-show="formStep2.$submitted && formStep2.lastName.$invalid") This field is invalid
            // END row
          ul.pager
            li.previous
              a(href='', ng-click="wizard.go(1)")
                span &larr; Previous
            li.next
              a(href='', ng-click="wizard.go(3)")
                | Next
                span &rarr;
        // END Wizard Step inputs
        // START Wizard Step inputs
        div#step3(ng-show="wizard.active(3)")
          // Wizard with validation require inner forms to group step inputs to be validated
          fieldset(ng-form="formStep3")
            legend Contact
            // START row
            .row
              .col-md-6
                .form-group
                  label Email
