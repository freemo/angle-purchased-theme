form.panel
  uib-tabset(justified="true")
    uib-tab
      uib-tab-heading
        | Product Edit
      div
        fieldset: .form-group
          label.col-md-2.control-label Name: 
          .col-md-10
            input.form-control(type='text', placeholder='Product name..')
        fieldset: .form-group
          label.col-md-2.control-label Description: 
